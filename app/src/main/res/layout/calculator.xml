<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/primary_light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <Button
                android:text="@string/numberSeven"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="@string/numberEight"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="@string/numberNine"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="-"
                style="@style/buttonCal">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <Button
                android:text="@string/numberFour"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="@string/numberFive"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="@string/numberSix"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="-"
                style="@style/buttonCal">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <Button
                android:text="@string/numberOne"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="@string/numberTwo"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="@string/numberThree"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="C"
                style="@style/buttonCal">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <Button
                android:text="0"
                android:layout_height="match_parent"
                android:layout_weight="2"
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="."
                style="@style/buttonCal">
            </Button>
            <Button
                android:text="="
                style="@style/buttonCal"
                android:background="@color/accent">
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>